program Array
	' min_array
	' returns the smallest integer from an array
	function min_array(a: array of integer) -> integer
		var min, i: integer ;
		begin 
			min = 9999; 
			i   = 0;
			for i in 0..5 do
				if a[i] < min then
					min = i 
				end
			end ;
			return min
		end
	end
	
	' max_array
	' returns the largest integer from an array
	function max_array(a: array of integer) -> integer
		var max, i: integer ;
		begin 
			max = 0; 
			i   = 0;
			
			for i in 0..#a do
				if a[i] > max then
					max = a[i]
				end
			end ;
			
			return max
		end
	end
	
	function main -> void
		var a: array 2 of integer,
		    min, max: integer; 
		
		begin
			min = call min_array(a) ;
			max = call max_array(a) ;
			print min, "\n", max
		end
	end
end